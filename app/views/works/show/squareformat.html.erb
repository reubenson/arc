<section class="work squareformat" data-workId=<%= @work.id %> >

  <section class="work-header-container work-section">
    <header>
      <span class="work-header-artist"><%= link_to @artist.fullname, @artist %> </span>
      <span class="work-header-divider">/</span>
      <span class="work-header-title"> <%= @work.title %> </span>
    </header>
  </section>

  <section class="work-image-container work-section">
    <div class="lede-image">
      <img src="<%= @work.image_url %>" alt="Album Cover" />
    </div>
  </section>

