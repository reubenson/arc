<section class="work-details-container work-section testing<%= ' small' if small %>">
  <h5 class="work-section-header">Release Details</h5>
  <div class="work-details">
      <% if @work.record_label %>
        <div class="work-detail">
          <span class="work-detail-label">Label: </span>
          <span class="work-detail-data"><%= @work.record_label %></span>
        </div>
      <% end %>
      <% if @work.end_date %>
        <div class="work-detail">
          <span class="work-detail-label">Release Date: </span>
          <span class="work-detail-data"><%= @work.end_date.strftime('%B %d, %Y') %></span>
        </div>
      <% end %>
      <% if @work.pieces.length > 1 %>
        <div class="work-detail">
          <span class="work-detail-label">Duration: </span>
          <span class="work-detail-data"><%= @work.duration_formatted %></span>
        </div>
      <% end %>
  </div>
</section>
