<div class="work-image-container work-section<%= ' cover' if cover  %><%= ' fill-lede' if fillLede%><%= ' small' if small %>">
  <div class="work-image-carousel">
    <% if @work.image_urls.length > 1 %>
    <button class="work-image-carousel-left work-image-carousel-button">
      <i class="fa fa-chevron-left" aria-hidden="false"></i>
    </button>
    <button class="work-image-carousel-right work-image-carousel-button">
      <i class="fa fa-chevron-right" aria-hidden="false"></i>
    </button>
    <% end %>

    <div class="work-images">
      <% @work.image_urls.each_with_index do |url, i| %>
      <div class="work-image <%= i == 0 ? 'active' : 'hide' %>" style="background-image: url(<%= url %>)"></div>
      <% end %>
    </div>
  </div>

  <div class="lede-image">
    <img src="<%= @work.image_urls[0] %>" alt="Album Cover" />
  </div>
</div>
